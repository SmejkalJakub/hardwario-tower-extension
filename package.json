{
  "name": "hardwario-tower",
  "displayName": "HARDWARIO Tower",
  "description": "Extension for development of a firmware for HARDWARIO TOWER Industrial IoT Kit",
  "version": "0.0.1",
  "publisher": "HARDWARIO a.s.",
  "license": "MIT",
  "icon": "media/hardwario-logo.png",
  "engines": {
    "vscode": "^1.64.0"
  },
  "extensionDependencies": [
    "ms-vscode.cpptools-extension-pack",
    "marus25.cortex-debug",
    "ms-vscode.vscode-serial-monitor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hardwario/hardwario-tower-vscode-extension.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "breakpoints": [
      {
        "language": "c"
      }
    ],
    "debuggers": [
      {
        "initialConfigurations": [
          {
            "name": "HARDWARIO TOWER Debug",
            "request": "launch",
            "type": "cortex-debug",
            "cwd": "${workspaceFolder}",
            "device": "STM32L083CZ",
            "servertype": "jlink",
            "jlinkscript": "./sdk/tools/jlink/flash.jlink",
            "interface": "swd",
            "serverpath": "${command:hardwario-tower.locate_jlink}",
            "svdFile": "./sdk/sys/svd/stm32l0x3.svd",
            "gdbPath": "${command:hardwario-tower.locate_toolchain}",
            "runToEntryPoint": "application_init",
            "executable": "${workspaceFolder}/out/debug/firmware.elf",
            "windows": {
              "gdbPath": "${command:hardwario-tower.locate_toolchain}.exe",
              "serverpath": "${command:hardwario-tower.locate_jlink}.exe"
            }
          }
        ],
        "label": "HARDWARIO TOWER Debug",
        "type": "hardwario-debugger",
        "languages": [
          "c"
        ]
      }
    ],
    "commands": [
      {
        "command": "hardwario-tower.build",
        "title": "HARDWARIO Tower Flash"
      },
      {
        "command": "hardwario-tower.flash",
        "title": "HARDWARIO Tower Build"
      },
      {
        "command": "hardwario-tower.clean",
        "title": "HARDWARIO Tower Clean"
      },
      {
        "command": "hardwario-tower.console",
        "title": "HARDWARIO Tower Console"
      },
      {
        "command": "hardwario-tower.flash_and_log",
        "title": "HARDWARIO Tower Flash and Attach"
      },
      {
        "command": "hardwario-tower.flash_and_debug",
        "title": "HARDWARIO Tower Flash and Debug"
      },
      {
        "command": "hardwario-tower.change_device",
        "title": "HARDWARIO Tower Change Device"
      },
      {
        "command": "hardwario-tower.debug",
        "title": "HARDWARIO Tower Start Debugging"
      },
      {
        "command": "hardwario-tower.clone_skeleton",
        "title": "HARDWARIO Tower Clone Firmware"
      },
      {
        "command": "hardwario-tower.clone_firmware",
        "title": "HARDWARIO Tower Clone Firmware From Existing"
      },
      {
        "command": "hardwario-tower.change_release_type",
        "title": "HARDWARIO Tower Change Release Type"
      },
      {
        "command": "hardwario-tower.open_documentation",
        "title": "HARDWARIO Tower Shop"
      },
      {
        "command": "hardwario-tower.open_shop",
        "title": "HARDWARIO Tower Documentation"
      },
      {
        "command": "hardwario-tower.open_projects",
        "title": "HARDWARIO Tower Projects"
      },
      {
        "command": "hardwario-tower.open_github",
        "title": "HARDWARIO Tower GitHub"
      },
      {
        "command": "hardwario-tower.open_forum",
        "title": "HARDWARIO Tower Forum"
      },
      {
        "command": "hardwario-tower.open_website",
        "title": "HARDWARIO Tower Website"
      },
      {
        "command": "hardwario-tower.open_sdk",
        "title": "HARDWARIO Tower SDK"
      },
      {
        "command": "hardwario-tower.update_sdk",
        "title": "HARDWARIO Tower Update Firmware SDK"
      },
      {
        "command": "hardwario-tower.upgrade_firmware",
        "title": "HARDWARIO Tower Upgrade Firmware"
      },
      {
        "command": "hardwario-tower.clear_console",
        "title": "Clear HARDWARIO Console",
        "icon": "$(clear-all)"
      },
      {
        "command": "hardwario-tower.disconect_console",
        "title": "Disconnect Console",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "hardwario-tower.connect_console",
        "title": "Connect Console",
        "icon": "$(debug-continue)"
      },
      {
        "command": "hardwario-tower.save_log",
        "title": "Save Console Log",
        "icon": "$(save-as)"
      },
      {
        "command": "hardwario-tower.console.scroll_to_bottom",
        "title": "Scrool to bottom",
        "icon": "$(arrow-down)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hardwarioTowerActivityBar",
          "title": "HARDWARIO Tower",
          "icon": "media/logo.svg"
        }
      ],
      "panel": [
				{
					"id": "hardwarioTowerPanel",
					"title": "HARDWARIO TOWER",
					"icon": "media/logo.svg"
				}
			]
    },
    "views": {
      "hardwarioTowerActivityBar": [
        {
          "id": "hardwario.tower.views.palette",
          "name": "Palette",
          "icon": "media/logo.svg",
          "contextualTitle": "HARDWARIO Tower"
        }
      ],
      "hardwarioTowerPanel": [
				{
					"type": "webview",
					"id": "harwdario.tower.views.console",
					"name": "Console",
					"contextualTitle": "Console",
					"icon": "media/logo.svg",
					"visibility": "visible"
				}
			]
    },
    "menus": {
			"view/title": [
				{
					"command": "hardwario-tower.clear_console",
					"group": "navigation",
					"when": "view == harwdario.tower.views.console"
				},
        {
					"command": "hardwario-tower.disconect_console",
					"group": "navigation",
					"when": "view == harwdario.tower.views.console && hardwario-tower.console_connected"
				},
        {
					"command": "hardwario-tower.connect_console",
					"group": "navigation",
					"when": "view == harwdario.tower.views.console && !hardwario-tower.console_connected"
				},
        {
					"command": "hardwario-tower.save_log",
					"group": "navigation",
					"when": "view == harwdario.tower.views.console"
				},
        {
					"command": "hardwario-tower.console.scroll_to_bottom",
					"group": "navigation",
					"when": "view == harwdario.tower.views.console"
				}
			]
		}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "clear": "tsc --build --clean",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "18.x",
    "@types/request": "^2.48.8",
    "@types/vscode": "^1.68.1",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "child_process": "1.0.2",
    "command-exists": "^1.2.9",
    "npm-check-updates": "^15.2.1",
    "request": "^2.88.2",
    "serialport": "10.4.0"
  }
}
